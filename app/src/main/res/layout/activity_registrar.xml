<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#111111"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastro"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#E2DFD2"
                android:layout_marginBottom="30dp"/>

            <!-- Label Nome -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insira seu nome"
                android:textColor="#E2DFD2"
                android:layout_marginBottom="5dp"/>

            <!-- Input Nome -->
            <EditText
                android:id="@+id/etNomeRegister"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Seu Nome"
                android:textColorHint="#9E9E9E"
                android:textColor="#E2DFD2"
                android:inputType="textPersonName"
                android:backgroundTint="#E2DFD2"
                android:layout_marginBottom="20dp"
                android:maxLines="1"/>

            <!-- Label Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insira seu e-mail"
                android:textColor="#E2DFD2"
                android:layout_marginBottom="5dp"/>

            <!-- Input Email -->
            <EditText
                android:id="@+id/etEmailRegister"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="seu.email@exemplo.com"
                android:textColorHint="#9E9E9E"
                android:textColor="#E2DFD2"
                android:inputType="textEmailAddress"
                android:backgroundTint="#E2DFD2"
                android:layout_marginBottom="40dp"
                android:maxLines="1"/>

            <!-- Botão Cadastrar -->
            <Button
                android:id="@+id/btnPerformRegister"
                android:layout_width="261dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#512BD4"
                android:text="Cadastrar"
                android:textColor="#FFFFFF" />

            <!-- Botão Voltar (Link) -->
            <Button
                android:id="@+id/btnBackToLogin"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Já tenho conta. Voltar."
                android:textColor="#808080"
                android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>